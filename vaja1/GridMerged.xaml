<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style TargetType="Grid" x:Key="GridBase">
        <Setter Property="Background" Value="#101010"/>
    </Style>

    <Style TargetType="Grid" x:Key="GridBlack" BasedOn="{StaticResource GridBase}">
        <Setter Property="Background" Value="Black"/>
    </Style>

    <Style TargetType="Grid" x:Key="GridBaseSec" BasedOn="{StaticResource GridBlack}">
        <Setter Property="Margin" Value="0,-5,0,5"/>
    </Style>

    <Style TargetType="GridSplitter" x:Key="GridSpliterBase">
        <Setter Property="Background" Value="#707070"/>
        <Setter Property="Width" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

</ResourceDictionary>