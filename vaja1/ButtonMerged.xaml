<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style TargetType="Button" x:Key="ButtonBase">
        <Setter Property="Background" Value="#aabbcc"/>
        <Setter Property="BorderBrush" Value="#aabbcc"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Foreground" Value="#101010"/>
        <Setter Property="FontFamily" Value="Arial"/>
    </Style>

    <Style TargetType="Button" x:Key="ButtonPannel" BasedOn="{StaticResource ButtonBase}">
        <Setter Property="Margin" Value="5,0,0,0"/>
    </Style>

    <Style TargetType="Button" x:Key="ButtonPannelSec" BasedOn="{StaticResource ButtonBase}">
        <Setter Property="Margin" Value="5,0,5,0"/>
    </Style>

    <Style TargetType="Button" x:Key="ButtonPannelThr" BasedOn="{StaticResource ButtonBase}">
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="Width" Value="65"/>
        <Setter Property="Height" Value="30"/>
    </Style>

    <Style TargetType="Border" x:Key="BorderBase">
        <Setter Property="BorderBrush" Value="#eeeeee"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
</ResourceDictionary>