<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">


    <Style TargetType="Slider" x:Key="SliderBase" BasedOn="{StaticResource MaterialDesignSlider}">
        <Setter Property="Margin" Value="5,0,5,0"/>
        <Setter Property="Slider.IsMoveToPointEnabled" Value="True"/>
        <Setter Property="Maximum" Value="100"/>
        <Setter Property="Minimum" Value="0"/>
    </Style>

    <Style TargetType="Slider" x:Key="SliderBaseDer" BasedOn="{StaticResource SliderBase}">
        <Setter Property="Margin" Value="0,4,0,0"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Slider.IsMoveToPointEnabled" Value="True"/>
        <Setter Property="Maximum" Value="100"/>
        <Setter Property="Minimum" Value="0"/>
        <Setter Property="TickFrequency" Value="1"/>
        <Setter Property="IsSnapToTickEnabled" Value="True"/>
    </Style>
</ResourceDictionary>