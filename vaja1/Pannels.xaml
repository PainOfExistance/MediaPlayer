<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Menu" x:Key="MenuBase">
        <Setter Property="Background" Value="#eeeeee"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style TargetType="MenuItem" x:Key="MenuItemBase">
        <Setter Property="Background" Value="#eeeeee"/>
        <Setter Property="Height" Value="25"/>
    </Style>

    <Style TargetType="WrapPanel" x:Key="WrapPanelBase">
        <Setter Property="Margin" Value="0,5,0,5"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="StackPanelBase">
        <Setter Property="Width" Value="auto"/>
        <Setter Property="Margin" Value="5,10,0,0"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="StackPanelHor" BasedOn="{StaticResource StackPanelBase}">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="StackPanelMarg" BasedOn="{StaticResource StackPanelHor}">
        <Setter Property="Margin" Value="0,0,0,2"/>
    </Style>
</ResourceDictionary>